@model SQLClient_Products.Models.ProductImage
<h2>Create</h2>

<form action="@Url.Action("Create", "ProductImages", new { id = ViewBag.ProductID })" method="post" enctype="multipart/form-data">
    <div>
        <label for="file">Image File</label>
        <input type="file" id="fileUpload" name="file" required value="Upload Image" />
    </div>

    <button type="submit" class="btn btn-default">Save Changes</button>
</form>